{
  "name": "Pursuit",
  "version": "0.5.14",
  "author": {
    "name": "Revlo Inc."
  },
  "description": "Pursuit",
  "license": "GPL-3.0",
  "main": "electron-start.js",
  "homepage": "./",
  "build": {
    "appId": "com.revlo.pursuit",
    "mac": {
      "category": "public.app-category.games"
    },
    "forceCodeSigning": true,
    "directories": {
      "buildResources": "buildResources"
    },
    "files": [
      "build",
      "node_modules",
      ".env",
      "electron-start.js"
    ],
    "extraFiles": [
      "LICENSE"
    ],
    "asar": true,
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "perMachine": true
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "pursuitgg",
        "path": "application"
      }
    ]
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "install-plugin": "node scripts/install-plugin.js",
    "test": "node scripts/test.js --env=jsdom",
    "electron": "electron .",
    "dev": "nf start",
    "pack": "build --dir",
    "clean": "rm -rf dist",
    "clean:mac": "rm -rf dist/mac",
    "clean:win": "rm -rf dist/win",
    "dist:win": "export CSC_LINK=~/Dev/codesigning/WindowsCodeSigningCert.p12; read -s -p \"Certificate Password: \" certPassword; export CSC_KEY_PASSWORD=\"$certPassword\"; build --win",
    "dist:mac": "build --mac",
    "dist": "npm run dist:win"
  },
  "dependencies": {
    "@material-ui/core": "^1.5.0",
    "@sentry/electron": "^0.5.5",
    "@streamlabs/obs-studio-node": "https://github.com/stream-labs/obs-studio-node/releases/download/v0.0.35/iojs-v2.0.1-signed.tar.gz",
    "aws-sdk": "^2.299.0",
    "babel-plugin-react-css-modules": "^2.7.1",
    "chokidar": "^2.0.4",
    "datejs": "^1.0.0-rc3",
    "dotenv": "^2.0.0",
    "electron-updater": "^3.0.1",
    "fs-extra": "^4.0.0",
    "mixpanel-browser": "^2.11.1",
    "normalizr": "^3.2.3",
    "portscanner": "^2.2.0",
    "prop-types": "^15.5.10",
    "proxy-agent": "^3.0.0",
    "rc-tooltip": "^3.5.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-masonry-component": "^5.0.7",
    "react-redux": "^5.0.5",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.8",
    "react-timeout": "^1.0.1",
    "react-transition-group": "^1.2.0",
    "redux": "^3.6.0",
    "redux-mixpanel-middleware": "^1.0.1",
    "redux-persist": "^4.8.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "tar": "4.2.0",
    "tasklist": "^3.1.1",
    "throttle-proxy": "^2.2.0",
    "uuid": "^3.0.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "7zip-bin": "^2.2.7",
    "@sentry/cli": "^1.34.0",
    "@sentry/webpack-plugin": "^1.5.2",
    "autoprefixer": "6.7.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "7.2.3",
    "babel-jest": "18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^2.2.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.20.0",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "4.0.2",
    "css-loader": "0.26.1",
    "detect-port": "1.1.0",
    "electron": "2.0.6",
    "electron-builder": "20.22.0",
    "electron-download": "^4.1.0",
    "electron-publisher-s3": "^19.6.0",
    "electron-react-devtools": "^0.4.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-react-app": "1.0.4",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.10.0",
    "foreman": "^2.0.0",
    "html-webpack-plugin": "2.24.0",
    "http-proxy-middleware": "0.17.3",
    "jest": "18.1.0",
    "json-loader": "0.5.4",
    "object-assign": "4.1.1",
    "postcss-loader": "1.2.2",
    "promise": "7.1.1",
    "react-dev-utils": "^0.5.2",
    "remote-redux-devtools": "^0.5.11",
    "shelljs": "^0.7.8",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.2",
    "webpack-manifest-plugin": "1.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
